<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="frmRaceSelection"
	x:Name="Window"
	Title="frmRaceSelection"
	Width="640" Height="480">
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Routeur;component/Styles/ControlsStyles.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>

	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="0.842*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<TextBlock HorizontalAlignment="Left" Margin="{DynamicResource DefMargin}" TextWrapping="Wrap" Width="121"><Run Language="fr-fr" Text="Select race :"/></TextBlock>
		<ListView Grid.Row="1" Margin="{DynamicResource DefMargin}" ItemsSource="{Binding RaceList, ElementName=Window}">
			<ListView.View>
				<GridView>
					<GridViewColumn DisplayMemberBinding="{Binding racename}" Header="Race Name"/>
				</GridView>
			</ListView.View>
		</ListView>
		<StackPanel Grid.Row="3" Orientation=" Horizontal" Margin="{DynamicResource DefMargin}" HorizontalAlignment="Right">
			<Button Content="Engage" MinWidth="80" Margin="{DynamicResource DefMargin}"/>
			<Button Content="Close" MinWidth="80" Margin="{DynamicResource DefMargin}" Click="OnCloseRequest"/>
		</StackPanel>
		
	</Grid>
</Window>