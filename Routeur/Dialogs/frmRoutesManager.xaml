<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Routeur="clr-namespace:Routeur" 
	x:Class="frmRoutesManager"
	x:Name="Window"
	Title="frmRoutesManager"
	Width="640" Height="480">
	
	<Window.Resources >
	<DataTemplate DataType="{x:Type Routeur:RecordedRoute}">
		<Grid>
		<TextBox Text="{Binding Route.RouteName, Mode=Default}"  />
		</Grid>
	</DataTemplate>
	</Window.Resources>
	<Grid x:Name="LayoutRoot">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.268*"/>
			<ColumnDefinition Width="0.732*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="0.122*"/>
			<RowDefinition Height="0.77*"/>
			<RowDefinition Height="0.108*"/>
		</Grid.RowDefinitions>
		<ListBox x:Name="listBox" Grid.Row="1" Margin="{DynamicResource DefMargin}" ItemsSource="{Binding RoutesInRace, Mode=Default}"/>
		<Button HorizontalAlignment="Right" Margin="0,8.952,8,8" Width="75" Content="Close" Grid.Column="1" Grid.Row="2" Click="OnClose"/>
		<GridSplitter HorizontalAlignment="Left" Width="8.768" Grid.Column="1" Grid.Row="1" Foreground="{x:Null}" Background="Red">
			<GridSplitter.OpacityMask>
				<RadialGradientBrush>
					<GradientStop Color="#00000000" Offset="0"/>
					<GradientStop Color="White" Offset="1"/>
				</RadialGradientBrush>
			</GridSplitter.OpacityMask>
		</GridSplitter>
		<ListBox Margin="{DynamicResource DefMargin}" Grid.Column="1" Grid.Row="1" ItemsSource="{Binding SelectedItem.Route.Route, ElementName=listBox, Mode=Default}"/>
	</Grid>
</Window>