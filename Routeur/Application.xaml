<Application x:Class="Application"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="RouteurMain.xaml"
ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        
    	<ResourceDictionary>
    		<ResourceDictionary.MergedDictionaries>
    			<!--<ResourceDictionary Source="Controls\PathResources.xaml"/>-->
    			<ResourceDictionary Source="Styles/ControlsStyles.xaml"/>
    			<ResourceDictionary Source="Controls/7SegDisplays/7DigResources.xaml"/>
    			<ResourceDictionary Source="Dialogs/RouteMgrResources.xaml"/>
    			<ResourceDictionary Source="ChatResourceDictionary.xaml"/>
    		</ResourceDictionary.MergedDictionaries>
    		<Thickness x:Key="DefMargin">4</Thickness>
			
			<Style x:Key="MargedText" TargetType ="{x:Type TextBlock}" >
				<Setter Property="Margin" Value="{DynamicResource DefMargin}"/>
			</Style>
			
    	</ResourceDictionary>
        
    </Application.Resources>
</Application>
