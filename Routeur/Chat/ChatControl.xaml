<UserControl x:Class="ChatControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto" MinHeight="13"/>
        </Grid.RowDefinitions>
        <ScrollViewer>
            <RichTextBox  >
                <FlowDocument DataContext="{Binding ChatTextDocument}"/>
            </RichTextBox>
        </ScrollViewer>
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="Auto" MinWidth="60"/>
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding ChatSendLine}" />
            <Button Content="Send" Grid.Column="1" Click="OnChatSendClick"/>
        </Grid>
    </Grid>
</UserControl>
