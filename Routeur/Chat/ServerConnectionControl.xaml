<UserControl x:Class="ServerConnectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:S22="clr-namespace:S22.Xmpp.Im;assembly=S22.Xmpp"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Routeur;component/Styles/ControlsStyles.xaml"/>
			</ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type S22:RosterItem}">
				<Grid >
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="{Binding Jid.Node}"/>
					</StackPanel>
				</Grid>
            </DataTemplate>
        </ResourceDictionary>
	</UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <ListBox ItemsSource="{Binding Roster}" Margin="{DynamicResource DefMargin}" MouseDoubleClick="OnContactDblClick"/>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" Grid.Column="1" Margin="{DynamicResource DefMargin}" >
            <TextBox  Text="{Binding ServerText, Mode=OneWay}" IsReadOnly="True" />
        </ScrollViewer>
    </Grid>
</UserControl>
